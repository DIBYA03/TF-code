{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "GetObjects",
            "Effect": "Allow",
            "Action": [
                "kms:Decrypt",
                "s3:GetObject",
                "s3:GetObjectTagging",
                "s3:GetObjectVersion",
                "s3:GetObjectVersionTagging",
                "s3:ListBucket"
            ],
            "Resource": [
                "${kms_arn}",
                "arn:aws:s3:::${bucket_name}",
                "arn:aws:s3:::${bucket_name}/*"
            ]
        }
    ]
}