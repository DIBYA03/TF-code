[
  {
    "name": "${name}",
    "image": "${ecr_image}:${ecr_image_tag}",
    "essential": true,
    "cpu": ${fargate_cpu},
    "memory": ${fargate_memory},
    "networkMode": "awsvpc",
    "privileged": false,
    "readonlyRootFilesystem": true,
    "portMappings": [
      {
        "containerPort": ${container_port},
        "hostPort": ${host_port}
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/${aws_log_group}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "${name}"
      }
    },
    "environment" : [
      {
        "name": "CONTAINER_LISTEN_PORT",
        "value": "${container_port}"
      }
    ],
    "secrets": [
      {
        "name": "CLEARBIT_API_KEY",
        "valueFrom": "${clear_bit_api_key}"
      }
    ]
  }
]
