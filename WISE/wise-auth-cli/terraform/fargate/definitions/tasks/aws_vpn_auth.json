[
  {
    "name": "${name}",
    "image": "${ecr_image}:${ecr_image_tag}",
    "essential": true,
    "privileged": false,
    "readonlyRootFilesystem": true,
    "cpu": ${fargate_cpu},
    "memory": ${fargate_memory},
    "networkMode": "awsvpc",
    "portMappings": [
      {
        "containerPort": ${container_port},
        "hostPort": ${host_port}
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${aws_log_group}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "${name}"
      }
    },
    "environment": [
      {
        "name": "CONTAINER_LISTEN_PORT",
        "value": "${container_port}"
      }
    ],
    "secrets": [
      {
        "name": "GOOGLE_IDP_URL",
        "valueFrom": "${google_idp_url_ssm_arn}"
      }
    ]
  }
]
